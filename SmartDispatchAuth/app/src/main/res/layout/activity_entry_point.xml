<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.EntryPoint"
    android:background="#EEE">

    <TextView
        android:id="@+id/smartDispatch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:text="Smart Dispatch"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:translationZ="5dp"
        android:paddingVertical="14dp"
        android:background="#FFF"
        android:fontFamily="sans-serif" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/smartDispatch">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/user_login_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_background"
                android:padding="10dp"
                android:text="LogIn as a requester"
                android:textColor="#FFF"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/vehicle_login_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/textviewborder"
                android:padding="10dp"
                android:text="login as a vehicle"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/user_login_button"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/hospital_login_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_background" 
                android:padding="10dp"
                android:text="login as a hospital"
                android:textColor="#FFF"
                android:layout_below="@id/vehicle_login_button"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"/>



            <Button
                android:id="@+id/admin_login_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/textviewborder"
                android:padding="10dp"
                android:text="Login as an admin"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/hospital_login_button"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif"/>
        </RelativeLayout>
    </ScrollView>


    <Button
        android:id="@+id/about_us"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/ColorSecondary"
        android:drawableStart="@drawable/ic_info_outline_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:paddingLeft="10dp"/>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_below="@id/scrollView">

        <View
            android:id="@+id/lightView"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/ColorSecondary"
            android:layout_above="@+id/darkView"/>

        <View
            android:id="@+id/darkView"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</RelativeLayout>
