<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#EEE"
    android:layout_height="match_parent"
    tools:context=".UI.Admin.AdminMainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:translationZ="2dp"
        android:elevation="7dp"
        >
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/textviewborder">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:text="Request Details"
                android:padding="10dp"
                android:background="@color/colorPrimaryDark"/>

            <RelativeLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingTop="5dp"
                android:layout_below="@id/title">


                <RelativeLayout
                    android:id="@+id/typeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Emergency Type : "
                        android:textColor="@color/ColorSecondary"/>

                    <TextView
                        android:id="@+id/emergencyType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:paddingHorizontal="5dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:layout_toRightOf="@+id/type"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/severityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@id/typeLayout">

                    <TextView
                        android:id="@+id/severityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Severity : "
                        android:textColor="@color/ColorSecondary"/>

                    <TextView
                        android:id="@+id/severity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:paddingHorizontal="5dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:layout_toRightOf="@id/severityText"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/locationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@id/severityLayout">

                    <TextView
                        android:id="@+id/latitudeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Latitude : "
                        android:textColor="@color/ColorSecondary"/>

                    <TextView
                        android:id="@+id/latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:paddingHorizontal="5dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:layout_toRightOf="@id/latitudeText"/>


                    <TextView
                        android:id="@+id/longitudeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Longitude : "
                        android:textColor="@color/ColorSecondary"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/latitude"/>

                    <TextView
                        android:id="@+id/longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:paddingHorizontal="5dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:layout_toRightOf="@id/longitudeText"/>

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/assign_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/light_button_background"
                android:text="Assign Vehicle"
                android:textColor="#FFF"
                android:layout_margin="10dp"
                android:layout_below="@id/detailsLayout"
                android:fontFamily="sans-serif"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>